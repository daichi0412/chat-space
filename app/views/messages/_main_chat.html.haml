%body
  .main_chat
    .header
      .header__group
        .header__group-name
          = @group.name
        .header__member-list
          - @group.users.each do |user|
            = user.name
      = link_to edit_group_path(@group.id) do 
        .header__edit Edit
    .message
      = render @messages
    .form
      = form_with model: [@group, @message], html: {class: "form__comments"}, local: true do |f|
        .form__footer
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = icon('far', 'image', class: 'fa-image')
            = f.file_field :image, class: 'icon-file'
        = f.submit 'Send', class: 'form__submit'
